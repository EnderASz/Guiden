{# Base template for Guiden application #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" href="{{ url_for('static', filename='img/favicon.ico') }}">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    {% include "fonts.j2" %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style.scss.css') }}">
    {% block app_specific_styling %}{% endblock %}
    {% block page_specific_styling %}{% endblock %}

    <title>
        {% block title %}
            {% block subtitle %}{% endblock %} Guiden
        {% endblock %}
    </title>
</head>
<body>
    {% include 'nav.j2' %}
    {% block content %}
    {% endblock content %}

    <script src="{{ url_for('static', filename='js/nav/animation.js') }}"></script>
    {% block app_specific_scripts %}
    {% endblock app_specific_scripts %}
    {% block page_specifi_scripts %}
    {% endblock page_specifi_scripts %}
</body>
</html>
